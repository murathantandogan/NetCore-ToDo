@model List<PeopleTotalVM>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">People</th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.ID</th>
                    <td>@item.Name</td>
                    <td> <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-secondary">Edit</a>  </td>
                    <td> <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-secondary">Details</a> </td>
                    <td> <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

